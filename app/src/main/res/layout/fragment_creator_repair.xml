<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/repairCreatorType"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="change/repair"
        android:inputType="text|textPersonName"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/repairCreatorCost"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint='input cost "100"'
        android:inputType="number"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairCreatorType" />

    <EditText
        android:id="@+id/repairCreatorMileage"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="mileage"
        android:inputType="number"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairCreatorCost" />

    <EditText
        android:id="@+id/repairCreatorDate"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint='date of repair "dd.mm.yyyy"'
        android:inputType="date"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="00.00.2000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairCreatorMileage" />

    <TextView
        android:id="@+id/repairCreatorTextType"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:paddingTop="10dp"
        android:text="Type:"
        android:textAlignment="viewEnd"
        android:textColor="@color/blackMC"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/repairCreatorType"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/repairCreatorTextCostOfRepair"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:paddingTop="10dp"
        android:text="Cost($):"
        android:textAlignment="viewEnd"
        android:textColor="@color/blackMC"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/repairCreatorType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairCreatorTextType" />

    <TextView
        android:id="@+id/repairCreatorTextMileageOfRepair"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:paddingTop="10dp"
        android:text="Mileage(km):"
        android:textAlignment="viewEnd"
        android:textColor="@color/blackMC"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/repairCreatorType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairCreatorTextCostOfRepair" />

    <TextView
        android:id="@+id/repairCreatorTextDateOfRepair"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="6dp"
        android:paddingTop="10dp"
        android:text="Date repair:"
        android:textAlignment="viewEnd"
        android:textColor="@color/blackMC"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/repairCreatorType"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairCreatorTextMileageOfRepair" />

    <Button
        android:id="@+id/repairCreatorButtonCreate"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:text="@string/create"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/repairCreatorButtonCancel"
        app:layout_constraintStart_toEndOf="@+id/repairCreatorButtonDelete" />

    <Button
        android:id="@+id/repairCreatorButtonDelete"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="6dp"
        android:text="@string/delete_car"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/repairCreatorButtonCreate"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/repairCreatorButtonCancel"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/repairCreatorButtonCreate" />

    <EditText
        android:id="@+id/repairCreatorDescription"
        android:layout_width="400dp"
        android:layout_height="144dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:ems="10"
        android:hint="description of repair..."
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repairCreatorDate" />

</androidx.constraintlayout.widget.ConstraintLayout>