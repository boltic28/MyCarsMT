<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CarItemText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="CarItemText.Secondary" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="PartItemText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="PartItemText.Secondary" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="RepairItemText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="RepairItemText.Type">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="RepairItemText.Mileage">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="RepairItemText.Description">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="CarPanel" parent="TextAppearance.AppCompat">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="CarPanel.VIN" >
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="CarPanel.Note" >
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorDarkGray</item>
    </style>

    <style name="CarPanel.Mileage" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkGray</item>
        <item name="android:padding">8dp</item>
    </style>
</resources>
